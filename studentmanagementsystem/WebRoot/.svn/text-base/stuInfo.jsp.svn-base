<%@ page language="java" import="java.util.*" pageEncoding="gbk"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<html>
  <head>
    
    <title>My JSP 'SIF.jsp' starting page</title>

  </head>

  <body bgcolor="#FFFFFF">
    <center>
    <table>
        <thead>
            <tr>
                <th bgcolor="#0099FF" colspan="4"><font color="#FFFFFF" size="+3" face="微软雅黑"><b>学生信息</b></font></th>
            </tr>        
        </thead>
        
        <tbody>
            <tr>
                <td width="100"><b>学号：</b></td>
                <td width="100">${STUINFO.stuId }</td>
                <td colspan="2" rowspan="8" width="150"><img src="img/${IMG }" width="150" height="200"/></td>
                
            </tr>
            <tr>
                <td><b>性别：</b></td>
                <td>${STUINFO.stuSex }</td>
                
                
            </tr>
            <tr>
                <td><b>真实姓名：</b></td> 
                <td>${STUINFO.stuName }</td>  
                
                         
            </tr>
            <tr>
                <td><b>年龄：</b></td> 
                <td>${STUINFO.stuAge }</td>  
                
                         
            </tr>
            <tr>
                <td><b>地区：</b></td>
                <td>${STUINFO.stuOri }</td>
                
                
            </tr>
            <tr>
                <td><b>民族：</b></td>
                <td>${STUINFO.stuNat }</td>
                
                
            </tr>
            <tr>
                <td><b>手机号码：</b></td>
                <td>${STUINFO.stuPhone }</td>
                
                
            </tr>
            <tr>
                <td><b>班级：</b></td>
                <td>${STUINFO.cio.gi.graName }.${STUINFO.cio.className }</td>
            </tr>
            <tr>
                <td><b>班主任：</b></td>
                <td>${STUINFO.cio.ti.tName }</td>
            </tr>
        </tbody>
    </table><br/>
        <a href="#">返回操作页面</a>
        <input type="hidden" name="stuNo" value=${STUINFO.学生id }>
    </center>
</body>
</html>
